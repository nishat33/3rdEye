<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:background="#C5CCCF"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86C8BC"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ContactList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Name"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20sp"
                android:text="Number"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:backgroundTint="#EDE1DD"
                android:gravity="center"
                android:text="Delete"
                android:textSize="10sp"
                android:layout_marginLeft="80dp"
                android:textColor="@color/black"
                android:id="@+id/delete"
                android:textStyle="italic"></Button>

            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:backgroundTint="#EDE1DD"
                android:gravity="center"
                android:text="Update"
                android:layout_marginLeft="80dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="italic"
                android:onClick="Update"></Button>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@+id/ContactList"
        >

    </View>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>