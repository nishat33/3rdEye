<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:backgroundTint="#FFCACA"
    android:paddingTop="10dp"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/EmergencY"
        android:layout_width="254dp"
        android:layout_height="43dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#B5BA73"
        android:text="Emergency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Police_Line" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="328dp"
        android:layout_height="32dp"
        android:layout_marginTop="31dp"
        android:text="Select Where Do You Wanna Call"
        android:textColor="#040303"

        android:textSize="20sp"
        android:paddingLeft="2dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Police_Line"
        android:layout_width="257dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
       android:backgroundTint="#B5BA73"
        android:text="Police_Line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/health_care"
        android:layout_width="257dp"
        android:layout_height="43dp"
        android:backgroundTint="#B5BA73"
        android:layout_marginTop="20dp"
        android:text="Health_Care"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/EmergencY"
        tools:layout_editor_absoluteY="208dp" />

</androidx.constraintlayout.widget.ConstraintLayout>